{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport api from '../apiService'; // adjust the path as per your file structure\n\nexport default {\n  data() {\n    return {\n      recipe: {}\n    };\n  },\n  created() {\n    this.fetchRecipe();\n  },\n  methods: {\n    fetchRecipe() {\n      const recipeId = this.$route.params.id;\n      api.get(`recipes/${recipeId}/`).then(response => {\n        this.recipe = response.data;\n      }).catch(error => {\n        console.error('Error fetching recipe:', error);\n      });\n    },\n    editRecipe() {\n      this.$router.push({\n        name: 'EditRecipe',\n        params: {\n          id: this.recipe.id\n        }\n      });\n    },\n    deleteRecipe() {\n      if (confirm('Are you sure you want to delete this recipe?')) {\n        api.delete(`recipes/${this.recipe.id}/`).then(response => {\n          console.log('Recipe deleted:', response);\n          this.$router.push('/'); // Redirect to recipe list after deletion\n        }).catch(error => {\n          console.error('Error deleting recipe:', error);\n        });\n      }\n    }\n  }\n};","map":{"version":3,"names":["api","data","recipe","created","fetchRecipe","methods","recipeId","$route","params","id","get","then","response","catch","error","console","editRecipe","$router","push","name","deleteRecipe","confirm","delete","log"],"sources":["C:\\Users\\mantegbosh.assefa\\Desktop\\django\\frontend\\src\\components\\RecipeDetail.vue"],"sourcesContent":["<template>\r\n    <div>\r\n      <h2>{{ recipe.title }}</h2>\r\n      <img :src=\"recipe.image\" alt=\"Recipe Image\" v-if=\"recipe.image\" class=\"detail-image\">\r\n      <p><strong>Ingredients:</strong> {{ recipe.ingredients }}</p>\r\n      <p><strong>Instructions:</strong> {{ recipe.instructions }}</p>\r\n      <div class=\"buttons\">\r\n        <button @click=\"editRecipe\">\r\n          <i class=\"fas fa-edit\"></i> Edit\r\n        </button>\r\n        <button @click=\"deleteRecipe\">\r\n          <i class=\"fas fa-trash-alt\"></i> Delete\r\n        </button>\r\n      </div>\r\n    </div>\r\n  </template>\r\n  \r\n  <script>\r\n  import api from '../apiService';  // adjust the path as per your file structure\r\n  \r\n  export default {\r\n    data() {\r\n      return {\r\n        recipe: {}\r\n      };\r\n    },\r\n    created() {\r\n      this.fetchRecipe();\r\n    },\r\n    methods: {\r\n      fetchRecipe() {\r\n        const recipeId = this.$route.params.id;\r\n        api.get(`recipes/${recipeId}/`)\r\n          .then(response => {\r\n            this.recipe = response.data;\r\n          })\r\n          .catch(error => {\r\n            console.error('Error fetching recipe:', error);\r\n          });\r\n      },\r\n      editRecipe() {\r\n        this.$router.push({ name: 'EditRecipe', params: { id: this.recipe.id } });\r\n      },\r\n      deleteRecipe() {\r\n        if (confirm('Are you sure you want to delete this recipe?')) {\r\n          api.delete(`recipes/${this.recipe.id}/`)\r\n            .then(response => {\r\n              console.log('Recipe deleted:', response);\r\n              this.$router.push('/'); // Redirect to recipe list after deletion\r\n            })\r\n            .catch(error => {\r\n              console.error('Error deleting recipe:', error);\r\n            });\r\n        }\r\n      }\r\n    }\r\n  }\r\n  </script>\r\n  \r\n  <style>\r\n  .detail-image {\r\n    width: 100%;\r\n    max-width: 600px; /* Set a max-width for the image */\r\n    height: auto;\r\n    object-fit: cover;\r\n    margin-bottom: 1em;\r\n  }\r\n  \r\n  .buttons {\r\n    margin-top: 1em;\r\n    display: flex;\r\n    gap: 0.5em; /* Adjust gap between buttons */\r\n  }\r\n  \r\n  button {\r\n    padding: 0.5em;\r\n    border: none;\r\n    background-color: transparent;\r\n    cursor: pointer;\r\n  }\r\n  \r\n  button i {\r\n    font-size: 1.2em; /* Adjust icon size */\r\n    color: #2c2c1e; /* Icon color */\r\n  }\r\n  \r\n  button:hover i {\r\n    color: #8