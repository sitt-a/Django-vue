{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport api from '../apiService'; // adjust the path as per your file structure\n\nexport default {\n  data() {\n    return {\n      recipes: []\n    };\n  },\n  mounted() {\n    this.fetchRecipes();\n  },\n  methods: {\n    fetchRecipes() {\n      api.get('recipes/').then(response => {\n        console.log('API Response:', response.data);\n        this.recipes = response.data;\n      }).catch(error => {\n        console.error('Error fetching recipes:', error);\n      });\n    },\n    editRecipe(recipeId) {\n      // Handle the edit action (e.g., navigate to an edit page)\n      this.$router.push({\n        name: 'EditRecipe',\n        params: {\n          id: recipeId\n        }\n      });\n    },\n    deleteRecipe(recipeId) {\n      if (confirm('Are you sure you want to delete this recipe?')) {\n        api.delete(`recipes/${recipeId}/`).then(response => {\n          console.log('Recipe deleted:', response);\n          this.fetchRecipes(); // Refresh the list after deletion\n        }).catch(error => {\n          console.error('Error deleting recipe:', error);\n        });\n      }\n    }\n  }\n};","map":{"version":3,"names":["api","data","recipes","mounted","fetchRecipes","methods","get","then","response","console","log","catch","error","editRecipe","recipeId","$router","push","name","params","id","deleteRecipe","confirm","delete"],"sources":["C:\\Users\\mantegbosh.assefa\\Desktop\\django\\frontend\\src\\components\\RecipeList.vue"],"sourcesContent":["<template>\r\n  <div>\r\n    <h2>Recipe List</h2>\r\n    <ul v-if=\"recipes.length\" class=\"recipe-list\">\r\n      <li v-for=\"recipe in recipes\" :key=\"recipe.id\" class=\"recipe-item\">\r\n        <div class=\"recipe-header\">\r\n          <img :src=\"recipe.image\" alt=\"Recipe Image\" class=\"recipe-image\" v-if=\"recipe.image\">\r\n          <div class=\"recipe-details\">\r\n            <h3>{{ recipe.title }}</h3>\r\n            <p><strong>Ingredients:</strong> {{ recipe.ingredients }}</p>\r\n            <p><strong>Instructions:</strong> {{ recipe.instructions }}</p>\r\n            <div class=\"buttons\">\r\n              <button @click=\"editRecipe(recipe.id)\">\r\n                <i class=\"fas fa-edit\"></i> <!-- Edit icon -->\r\n              </button>\r\n              <button @click=\"deleteRecipe(recipe.id)\">\r\n                <i class=\"fas fa-trash-alt\"></i> <!-- Delete icon -->\r\n              </button>\r\n            </div>\r\n          </div>\r\n        </div>\r\n      </li>\r\n    </ul>\r\n    <p v-else>No recipes available.</p>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport api from '../apiService';  // adjust the path as per your file structure\r\n\r\nexport default {\r\n  data() {\r\n    return {\r\n      recipes: [],\r\n    };\r\n  },\r\n  mounted() {\r\n    this.fetchRecipes();\r\n  },\r\n  methods: {\r\n    fetchRecipes() {\r\n      api.get('recipes/')\r\n        .then(response => {\r\n          console.log('API Response:', response.data);\r\n          this.recipes = response.data;\r\n        })\r\n        .catch(error => {\r\n          console.error('Error fetching recipes:', error);\r\n        });\r\n    },\r\n    editRecipe(recipeId) {\r\n      // Handle the edit action (e.g., navigate to an edit page)\r\n      this.$router.push({ name: 'EditRecipe', params: { id: recipeId } });\r\n    },\r\n    deleteRecipe(recipeId) {\r\n      if (confirm('Are you sure you want to delete this recipe?')) {\r\n        api.delete(`recipes/${recipeId}/`)\r\n          .then(response => {\r\n            console.log('Recipe deleted:', response);\r\n            this.fetchRecipes(); // Refresh the list after deletion\r\n          })\r\n          .catch(error => {\r\n            console.error('Error deleting recipe:', error);\r\n          });\r\n      }\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style>\r\n.recipe-list {\r\n  list-style: none;\r\n  padding: 0;\r\n  display: grid;\r\n  grid-template-columns: repeat(2, 1fr); /* Display recipes in two columns */\r\n  gap: 1em; /* Adjust gap between items */\r\n}\r\n\r\n.recipe-item {\r\n  border-bottom: 1px solid #ccc;\r\n  padding: 1em;\r\n  display: flex;\r\n}\r\n\r\n.recipe-header {\r\n  display: flex;\r\n  align-items: center;\r\n}\r\n\r\n.recipe-image {\r\n  width: 150px; /* Set width to 150px */\r\n  height: 100px; /* Set height to 100px */\r\n  object-fit: cover; /* Ensure the image covers the specified dimensions */\r\n  margin-right: 1em; /* Add spacing between image and details */\r\n  border-radius: 5px; /* Optional: Add border radius for a rounded image */\r\n}\r\n\r\n.recipe-details {\r\n  flex: 1; /* Expand to take remaining space */\r\n}\r\n\r\n.recipe-details h3 {\r\n  margin: 0;\r\n  font-size: 1.2em; /* Adjust the font size of the title */\r\n  color: #333;\r\n}\r\n\r\n.recipe-details p {\r\n  margin: 0.5em 0;\r\n  font-size: 1em;\r\n  color: #666;\r\n}\r\n\r\n.buttons {\r\n  margin-top: 1em;\r\n}\r\n\r\nbutton {\r\n  margin-right: 0.5em;\r\n  padding: 0.5em;\r\n  border: none;\r\n  background-color: transparent;\r\n  cursor: pointer;\r\n}\r\n\r\nbutton i {\r\n  font-size: 1.2em; /* Adjust icon size */\r\n  color: #2b2b1e; /* Icon color */\r\n}\r\n\r\nbutton:hover i {\r\n  color: #444b2a; /* Hover color */\r\n}\r\n</style>\r\n"],"mappings":";AA4BA,OAAOA,GAAE,MAAO,eAAe,EAAG;;AAElC,eAAe;EACbC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,OAAO,EAAE;IACX,CAAC;EACH,CAAC;EACDC,OAAOA,CAAA,EAAG;IACR,IAAI,CAACC,YAAY,CAAC,CAAC;EACrB,CAAC;EACDC,OAAO,EAAE;IACPD,YAAYA,CAAA,EAAG;MACbJ,GAAG,CAACM,GAAG,CAAC,UAAU,EACfC,IAAI,CAACC,QAAO,IAAK;QAChBC,OAAO,CAACC,GAAG,CAAC,eAAe,EAAEF,QAAQ,CAACP,IAAI,CAAC;QAC3C,IAAI,CAACC,OAAM,GAAIM,QAAQ,CAACP,IAAI;MAC9B,CAAC,EACAU,KAAK,CAACC,KAAI,IAAK;QACdH,OAAO,CAACG,KAAK,CAAC,yBAAyB,EAAEA,KAAK,CAAC;MACjD,CAAC,CAAC;IACN,CAAC;IACDC,UAAUA,CAACC,QAAQ,EAAE;MACnB;MACA,IAAI,CAACC,OAAO,CAACC,IAAI,CAAC;QAAEC,IAAI,EAAE,YAAY;QAAEC,MAAM,EAAE;UAAEC,EAAE,EAAEL;QAAS;MAAE,CAAC,CAAC;IACrE,CAAC;IACDM,YAAYA,CAACN,QAA